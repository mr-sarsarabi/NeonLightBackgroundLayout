<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="NeonBackgroundLayout">

        <!--padding attrs-->
        <attr name="neon_rightPadding" format="dimension" />
        <attr name="neon_topPadding" format="dimension" />
        <attr name="neon_leftPadding" format="dimension" />
        <attr name="neon_bottomPadding" format="dimension" />
        <attr name="neon_padding" format="dimension" />
        <attr name="neon_innerBackgroundPadding" format="dimension" />

        <!--geometrical user inputs-->
        <attr name="neon_cornerRadius" format="dimension" />
        <attr name="neon_strokeWidth" format="dimension" />
        <attr name="neon_shadowMultiplier" format="float" />

        <!--graphical user inputs-->
        <attr name="neon_strokeColor" format="color" />
        <attr name="neon_shadowColor" format="color" />
        <attr name="neon_innerBackgroundColor" format="color" />

        <!--view style input-->
        <attr name="neon_style" format="integer" >
            <enum name="style_shadow_only" value="1"/>
            <enum name="style_stroke_only" value="2"/>
            <enum name="style_stroke_and_shadow" value="3"/>
            <enum name="style_inner_background_only" value="4"/>
            <enum name="style_shadow_with_inner_background" value="5"/>
            <enum name="style_stroke_with_inner_background" value="6"/>
            <enum name="style_stroke_with_inner_background_and_shadow" value="7"/>
        </attr>
<!--        todo for the next update-->
